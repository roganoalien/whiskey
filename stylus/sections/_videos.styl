.videos-container{
	// background url(../images/bg-temp.png) no-repeat center center
	// background-size cover
	height 100vh
	margin-top -96px
	position relative
	width 100vw
	.bg-texture{
		position-select(0,0)
		background url(../images/texture.png) center center
		background-size contain
		height 100%
		opacity .6
		pointer-events none
		width 100%
		z-index 3
	}
	.logo{
		position-select(50%, 125px)
		height auto
		transform translate(-50%, -40%)
		width 90px
		z-index 2
	}
	.mouse-icon-holder{
		flex-container(center, column, center)
		position-select(50%, 0, absolute, true, false)
		transform translate(-50%, 0)
		.line{
			background $c-white
			height 10vh
			opacity .5
			width 2px
		}
		svg{
			animation-name mouser
			animation-duration 2s
			animation-iteration-count infinite
			opacity .5
			transform scale(.5) translateY(0)
			margin-bottom 20px
		}
		@keyframes mouser {
			0%{
				opacity .5
				transform scale(.5) translateY(0)
			}
			100%{
				opacity 0
				transform scale(.5) translateY(100%)
			}
		}
	}
	.roga-slider{
		position-select(0,0)
		height 100vh
		width 100vw
	}
	.social-networks{
		flex-container(center, column, center)
		position-select(50px, 0, absolute, false)
		height 100vh
		z-index 3
		width 35px
		a{
			margin-bottom 15px
			text-decoration none
			svg{
				fill $c-white
				height 20px
				transition all .25s ease-in-out
				width auto
			}
			&:hover{
				svg{
					fill $c-yellow
				}
			}
			&:last-child{
				margin-bottom 0
			}
		}
	}
	.slider-pagination{
		// position-select(50px,50%)
		position-select(50px,0)
		height 100vh
		z-index 3
		width 35px
		.pagination{
			position-select(0, 50%)
			transition transform .5s cubic-bezier(0.175, 0.885, 0.32, 1.275)
		}
		.pagination-lines{
			flex-container(center, row, space-between)
			position-select(-50px, calc(50% + 15px))
			height 2px
			width 135px
			.left, .right{
				background $c-white-more
				content ""
				display block
				height 2px
				width 50px
			}
		}
		.index{
			color $c-white
			cursor pointer
			font-size 25px
			font-weight $w-light
			margin 0 0 15px 0
			text-align center
			transform scale(.75)
			transition all .25s ease-in-out
			width 35px
			&:last-child{
				margin-bottom 0
			}
			&.active{
				font-weight $w-bold
				transform scale(1)
			}
		}
	}
	.slide{
		flex-container(center, column, center)
		position-select(0,0)
		height 100vh
		opacity 0
		pointer-events none
		width 100vw
		z-index 1
		&.active{
			opacity 1
			pointer-events auto
			h2, .btn-video{
				opacity 1 !important
				transform scale(1) !important
				&.title-light{
					transition-delay .25s
				}
			}
			.btn-video{
				transition transform .25s cubic-bezier(0.175, 0.885, 0.32, 1.275) .5s
			}
			.video-bg{
				opacity .25
			}
		}
		.btn-video{
			flex-container()
			background transparent
			border 3px solid $c-yellow
			border-radius 20px
			color $c-yellow
			cursor pointer !important
			font-size 20px
			height 45px
			opacity 0
			padding-bottom 3px
			position relative
			text-decoration none
			transform scale(0)
			width 160px
			z-index 2
			&:hover{
				background $c-yellow
				color $c-black
			}
		}
		h2{
			color $c-white
			margin 0
			opacity 0
			position relative
			transform scale(0)
			transition all .5s cubic-bezier(0.175, 0.885, 0.32, 1.275)
			z-index 2
			&.title-bold{
				font-size 60px
				font-weight $w-bold
				text-transform uppercase
			}
			&.title-light{
				font-size 45px
				font-weight $w-light
				margin-bottom 20px
				text-transform uppercase
			}
		}
		.video-bg{
			position-select(0,0)
			background-size cover !important
			height 100vh
			opacity 0
			overflow hidden
			position absolute !important
			transition all .25s ease-in-out
			width 100vw
			z-index -1
			.vidbg-container{
				height 100%
				width 100%
				video{
					position-select(50%, 50%)
					transform translate(-50%, -50%)
				}
			}
		}
	}
}